#!/bin/bash

# Summary Data - Task 3
# Creates CSV report and calculates averages

OUTPUT_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

if [ ! -d "$OUTPUT_DIR" ]; then
    echo "❌ Error: $OUTPUT_DIR directory not found. Please run batch processing script first."
    exit 1
fi

echo "CSV Report generated at: $REPORT_FILE"
echo

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Initialize variables for averages
total_height=0
total_weight=0
count=0

echo "Name,Height (m),Weight (kg)"

# Process each JSON file
for json_file in "$OUTPUT_DIR"/*.json; do
    if [ -f "$json_file" ]; then
        # Extract data using jq
        name=$(jq -r '.name' "$json_file" | sed 's/\b\w/\u&/g')
        height=$(jq -r '.height' "$json_file" | awk '{printf "%.1f", $1/10}')
        weight=$(jq -r '.weight' "$json_file" | awk '{printf "%.1f", $1/10}')
        
        # Add to CSV
        echo "$name,$height,$weight" >> "$REPORT_FILE"
        
        # Display formatted output
        echo "$name,$height,$weight"
        
        # Add to totals for average calculation
        total_height=$(echo "$total_height + $height" | bc -l)
        total_weight=$(echo "$total_weight + $weight" | bc -l)
        count=$((count + 1))
    fi
done

echo

# Calculate and display averages using awk
if [ $count -gt 0 ]; then
    avg_height=$(echo "scale=2; $total_height / $count" | bc -l)
    avg_weight=$(echo "scale=2; $total_weight / $count" | bc -l)
    
    echo "Average Height: $avg_height m"
    echo "Average Weight: $avg_weight kg"
else
    echo "No Pokemon data found to calculate averages."
fi